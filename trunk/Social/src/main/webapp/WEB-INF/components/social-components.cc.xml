<?xml version="1.0" encoding="UTF-8"?>
<Components xmlns="http://www.toobsframework.org/schema/component" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
  http://www.toobsframework.org/schema/component http://www.toobsframework.org/schema/componentConfig-0.1.0.xsd">

  <Component id="header">
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="common/html/header"/>
      </ContentType>
    </Pipeline>
  </Component>

  <Component id="headerLogin">
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="common/html/headerLogin"/>
      </ContentType>
    </Pipeline>
  </Component>

  <Component id="footer">
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="common/html/footer"/>
      </ContentType>
    </Pipeline>
  </Component>
  
  <Component id="footerLogin">
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="common/html/footer"/>
      </ContentType>
    </Pipeline>
  </Component>
  
  <Component id="declarations">
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="common/html/declarations"/>
      </ContentType>
    </Pipeline>
  </Component>
  
  <Component id="signUp">
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="components/html/signUp"/>
      </ContentType>
    </Pipeline>
  </Component>
  
  <Component id="userInfo">
    <GetObject action="getUserInfo" serviceProvider="userService" />
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="components/html/userInfo"></Transform>
      </ContentType>
    </Pipeline>
  </Component>

  <Component id="browserInfo">
    <GetObject action="getBrowserInfo" serviceProvider="environmentService">
      <Parameters>
        <Parameter name="userAgent" path="!header:User-Agent" isStatic="true" />
      </Parameters>
    </GetObject>
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="components/html/browserInfo"></Transform>
      </ContentType>
    </Pipeline>
  </Component>

  <Component id="postsByFriends">
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="components/html/postsByFriends"/>
      </ContentType>
    </Pipeline>
  </Component>

  <Component id="myPosts">
    <Pipeline>
      <ContentType contentType="xhtml">
        <Transform name="components/html/myPosts"/>
      </ContentType>
    </Pipeline>
  </Component>


</Components>